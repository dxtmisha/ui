{
  "md2": {
    "checkbox": {
      "@style": "{d.checkbox}",
      "var|sys": {
        "palette": "{sys.palette.onSurface}",
        "gap": "{ref.spacing.3}",
        "text": "{sys.palette.onSurface}",
        "textOpacity": "{sys.opacity.surface.medium}",
        "icon": {
          "borderWidth": "{ref.spacing.px} * 2",
          "rounded": "{ref.spacing.1}",
          "size": "{ref.spacing.5}"
        },
        "item": {
          "borderWidth": "{ref.spacing.px}",
          "size": "{ref.spacing.10}",
          "text": "{sys.palette.onPrimary}",
          "textOpacity": "{sys.opacity.primary.high}"
        },
        "label": {
          "required": "{sys.palette.error}"
        },
        "active": {
          "item": {
            "borderOpacity": "{sys.opacity.border}",
            "backgroundOpacity": "{sys.opacity.disabled}"
          }
        },
        "hover": {
          "item": {
            "backgroundOpacity": "{sys.opacity.hover}"
          }
        },
        "checked": {
          "palette": "{sys.palette.primary}"
        }
      }
    }
  }
}
