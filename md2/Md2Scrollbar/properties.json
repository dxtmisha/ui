{
  "md2": {
    "scrollbar": {
      "@style": "{d.scrollbar}",
      "var|sys": {
        "size": "{ref.spacing.2}",
        "rounded": "{sys.rounded.standard}",
        "border": {
          "color": "{sys.palette.onSurface}",
          "opacity": "{sys.opacity.border}",
          "width": "{ref.spacing.px}"
        },
        "thumb": {
          "background": "{sys.palette.onSurface}",
          "opacity": "{sys.opacity.border}",
          "hover": {
            "opacity": "{sys.opacity.surface.medium}"
          }
        }
      }
    }
  }
}
