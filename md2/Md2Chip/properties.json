{
  "md2": {
    "chip": {
      "@style": "{d.chip}",
      "var|sys": {
        "var|palette": "{sys.palette.overlay}",
        "var|backgroundOpacity": "{sys.opacity.overlay}",
        "var|borderWidth": "{ref.spacing.px}",
        "var|gradient": "{sys.palette.onSurface}",
        "var|padding": "{ref.spacing.3}",
        "var|space": "{ref.spacing.2}",
        "var|text": "{sys.palette.onSurface}",
        "var|textOpacity": "{sys.opacity.surface.high}",
        "var|width": "auto",
        "var|active": {
          "var|borderOpacity": "{sys.opacity.surface.medium}",
          "var|gradientOpacity": "{sys.opacity.dragged}",
          "var|shadow": "{sys.elevation.shadow.2}"
        },
        "var|disabled": {
          "var|palette": "{sys.palette.disabled}",
          "var|textOpacity": "{sys.opacity.surface.disabled}"
        },
        "var|dragged": {
          "var|shadow": "{sys.elevation.shadow.8}"
        },
        "var|focus": {
          "var|gradientOpacity": "{sys.opacity.focus}"
        },
        "var|hover": {
          "var|gradientOpacity": "{sys.opacity.hover}"
        },
        "var|selected": {
          "var|palette": "{sys.palette.primary}",
          "var|gradient": "{sys.palette.primary}",
          "var|text": "{sys.palette.primary}"
        },
        "var|icon": {
          "var|margin": "{ref.spacing.2}",
          "var|padding": "{ref.spacing.2}"
        }
      },
      "var|?ripple-background": "{??l.gradient}",
      "@before": "{??m.before}",
      "@font": "{font.body2}",
      "@round": "{??m.round}",
      "border-radius": "{sys.rounded.full}",
      "height": {
        "sm": "{ref.spacing.6}",
        "md": "{ref.spacing.8}",
        "lg": "{ref.spacing.10}",
        "default": "md"
      },
      "width": {
        "auto": {
          "var|??sys": {
            "var|width": "0"
          }
        },
        "sm": {
          "var|??sys": {
            "var|width": "{ref.spacing.16}"
          }
        },
        "md": {
          "var|??sys": {
            "var|width": "{ref.spacing.24}"
          }
        },
        "lg": {
          "var|??sys": {
            "var|width": "{ref.spacing.32}"
          }
        },
        "full": {
          "var|??sys": {
            "var|width": "100%"
          }
        }
      },
      "z-index": "{sys.elevation.index.2}",
      "@@palette": "{?palette}",
      "section|adaptive": {
        "sm": {
          "media|{ref.screen.sm}": {
            "@style": "{??m.text}"
          }
        },
        "md": {
          "media|{ref.screen.md}": {
            "@style": "{??m.text}"
          }
        },
        "lg": {
          "media|{ref.screen.lg}": {
            "@style": "{??m.text}"
          }
        },
        "full": {
          "@style": "{??m.text}"
        },
        "icon": {
          "--": "none"
        },
        "default": "full"
      },
      "section|appearance": {
        "outlined": {
          "::after": {
            "@style": "{??m.border}",
            "border-color": "{sys.palette.onSurface}",
            "border-opacity": "{sys.opacity.border}"
          }
        }
      },
      "section|rounded": {
        "@style": "{?rounded}"
      },
      "section|selected": {
        "palette-color": "{??l.text}"
      },
      "&.?rounded--full": {
        "@style": "{??m.round}"
      }
    }
  }
}
