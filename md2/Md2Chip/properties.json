{
  "md2": {
    "chip": {
      "@style": "{d.chip}",
      "var|sys": {
        "palette": "{sys.palette.overlay}",
        "padding": "{ref.spacing.3}",
        "space": "{ref.spacing.2}",
        "height": "{ref.spacing.8}",
        "width": "auto",
        "zIndex": "{sys.elevation.index.2}",
        "text": "{sys.palette.onSurface}",
        "textOpacity": "{sys.opacity.surface.high}",
        "backgroundOpacity": "{sys.opacity.overlay}",
        "gradient": "{sys.palette.onSurface}",
        "borderWidth": "{ref.spacing.px}",
        "rounded": "{sys.rounded.full}",
        "icon": {
          "padding": "{ref.spacing.1}",
          "margin": "{ref.spacing.1}",
          "fontSize": "{ref.font.size.2xl}"
        },
        "iconTrailing": {
          "fontSize": "{ref.font.size.xl}"
        },
        "dense": {
          "padding": "{ref.spacing.1}",
          "icon": {
            "margin": "{ref.spacing.1}"
          }
        },
        "selected": {
          "palette": "{sys.palette.primaryVariant}"
        },
        "disabled": {
          "palette": "{sys.palette.disabled}",
          "text": "{sys.palette.onSurface}",
          "textOpacity": "{sys.opacity.surface.disabled}",
          "backgroundOpacity": "{sys.opacity.disabled}"
        },
        "hover": {
          "gradientOpacity": "{sys.opacity.hover}"
        },
        "focus": {
          "gradientOpacity": "{sys.opacity.focus}"
        },
        "active": {
          "zIndex": "{sys.elevation.index.2}",
          "gradientOpacity": "{sys.opacity.dragged}",
          "shadow": "{sys.elevation.shadow.2}"
        },
        "dragged": {
          "zIndex": "{sys.elevation.index.8}",
          "shadow": "{sys.elevation.shadow.8}"
        }
      },
      "@font": "{font.body2}",
      "@ellipsis": "{d.font.ellipsis}",
      "@@palette": "{?palette}",
      "height": {
        "sm": "{ref.spacing.6}",
        "md": "{ref.spacing.8}",
        "lg": "{ref.spacing.10}"
      },
      "width": {
        "sm": "{ref.spacing.16}",
        "md": "{ref.spacing.24}",
        "lg": "{ref.spacing.32}"
      },
      "section|appearance": {
        "outlined": {
        },
        "outlined-old": {
          "var|??sys": {
            "selected": {
              "border": "{??sys.palette.primary}",
              "borderOpacity": "{sys.opacity.surface.high}"
            }
          },
          "::after": {
            "@style": "{??m.border}",
            "border-color": "{sys.palette.onSurface}",
            "border-opacity": "{sys.opacity.border}"
          }
        }
      },
      "section|adaptive": {
        "sm": {
          "media|{ref.screen.sm}": {
            "@style": "{??m.text}"
          }
        },
        "md": {
          "media|{ref.screen.md}": {
            "@style": "{??m.text}"
          }
        },
        "lg": {
          "media|{ref.screen.lg}": {
            "@style": "{??m.text}"
          }
        },
        "full": {
          "@style": "{??m.text}"
        },
        "icon": {
          "--": "none"
        },
        "default": "full"
      },
      "section|rounded": {
        "@style": "{?rounded}"
      },
      "section|readonly": {
        "@style": "{??m.readonly}"
      },
      "section|selected": {
        "palette-color": "{??l.text}"
      }
    }
  }
}
