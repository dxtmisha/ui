{
  "md2": {
    "list-item": {
      "@style": "{d.list-item}",
      "var|sys": {
        "palette": "{sys.palette.primary}",
        "paddingX": "{ref.spacing.4}",
        "paddingY": "{ref.spacing.1}",
        "height": "{ref.spacing.12}",
        "text": "{sys.palette.onSurface}",
        "textOpacity": "{sys.opacity.surface.high}",
        "gradient": "{sys.palette.onSurface}",
        "icon": {
          "margin": "{ref.spacing.6}"
        },
        "thumbnail": {
          "marginLeft": "{ref.spacing.2} * -1",
          "marginRight": "{ref.spacing.4}",
          "size": "{ref.spacing.8}"
        },
        "trailing": {
          "margin": "{ref.spacing.4}"
        },
        "prefix": {
          "padding": "{ref.spacing.4}"
        },
        "suffix": {
          "padding": "{ref.spacing.6}"
        },
        "description": {
          "textOpacity": "{sys.opacity.surface.medium}"
        },
        "progress": {
          "size": "{ref.spacing.8}",
          "opacity": "{sys.opacity.surface.disabled}"
        },
        "highlight": {
          "palette": "{sys.palette.warning}",
          "backgroundOpacity": "{sys.opacity.selected}"
        },
        "selected": {
          "palette": "{sys.palette.primaryVariant}",
          "backgroundOpacity": "{sys.opacity.selected}"
        },
        "disabled": {
          "palette": "{sys.palette.disabled}",
          "textOpacity": "{sys.opacity.surface.disabled}"
        },
        "hover": {
          "gradientOpacity": "{sys.opacity.hover}"
        },
        "focus": {
          "gradientOpacity": "{sys.opacity.focus}"
        },
        "active": {
          "gradientOpacity": "{sys.opacity.dragged}"
        },
        "rounded": {
          "marginX": "{ref.spacing.2}",
          "marginY": "{ref.spacing.1}"
        }
      },
      "@font": "{font.subtitle1}",
      "@@palette": "{?palette}",
      "height": {
        "xs": {
          "var|sys": {
            "height": "{ref.spacing.10}",
            "thumbnail": {
              "marginLeft": "0px",
              "marginRight": "{??sys.icon.margin}"
            }
          }
        },
        "sm": {
          "var|sys": {
            "height": "{ref.spacing.12}",
            "thumbnail": {
              "marginLeft": "{ref.spacing.1} * -1",
              "marginRight": "{ref.spacing.5}"
            }
          }
        },
        "md": "{ref.spacing.14}",
        "lg": {
          "var|sys": {
            "height": "{ref.spacing.18}"
          },
          "& .??__short": {
            "@font": "{font.body1}"
          }
        },
        "xl": {
          "var|sys": {
            "height": "{ref.spacing.18}",
            "thumbnail": {
              "marginLeft": "{??sys.paddingX} * -1"
            }
          },
          "& .??__short": {
            "@font": "{font.body1}"
          }
        },
        "default": "sm"
      },
      "#suffix": {
        "@font": "{font.subtitle2}"
      },
      "#description": {
        "@font": "{font.caption}"
      },
      "#short": {
        "@font": "{font.caption}"
      },
      "media|{ref.screen.md}": {
        "var|sys": {
          "paddingX": "{ref.spacing.6}"
        }
      }
    }
  }
}
