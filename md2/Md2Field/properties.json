{
  "md2": {
    "field": {
      "@style": "{d.field}",
      "mixin|m": {
        "mixin|appearance": {
          "mixin|filled": {
            "var|sys": {
              "backgroundOpacity": "{sys.opacity.overlay}",
              "borderOpacity": "{sys.opacity.primary.disabled}",
              "disabled": {
                "borderOpacity": "{sys.opacity.disabled}"
              },
              "hover": {
                "borderOpacity": "{sys.opacity.primary.medium}"
              },
              "focus": {
                "border": "{??sys.palette}",
                "borderOpacity": "{sys.opacity.primary.high}"
              }
            }
          },
          "mixin|outlined": {
            "var|sys": {
              "focus": {
                "border": "{??sys.palette}",
                "borderOpacity": "{sys.opacity.surface.high}",
                "borderWidth": "{ref.spacing.px} * 2",
                "label": {
                  "fontSize": "14px"
                }
              }
            }
          },
          "mixin|standard": {
            "var|sys": {
              "focus": {
                "border": "{??sys.palette}",
                "borderOpacity": "{sys.opacity.surface.high}",
                "borderWidth": "{ref.spacing.px} * 2"
              },
              "selected": {
                "var|backgroundOpacity": "{sys.opacity.overlay}"
              }
            }
          },
          "mixin|tonal": {
            "var|sys": {
              "backgroundOpacity": "{sys.opacity.overlay}"
            }
          }
        }
      },
      "var|sys": {
        "palette": "{sys.palette.primary}",
        "width": "{ref.spacing.72}",
        "height": "{ref.spacing.14}",
        "padding": "{ref.spacing.3}",
        "space": "{ref.spacing.1}",
        "text": "{sys.palette.onSurface}",
        "textOpacity": "{sys.opacity.surface.high}",
        "background": "{sys.palette.overlay}",
        "backgroundOpacity": "0",
        "border": "{sys.palette.onSurface}",
        "borderOpacity": "{sys.opacity.border}",
        "borderWidth": "{ref.spacing.px}",
        "gradient": "{sys.palette.onSurface}",
        "gradientOpacity": "0",
        "shadow": "none",
        "placeholder": {
          "textOpacity": "{sys.opacity.surface.medium}"
        },
        "label": {
          "height": "{ref.spacing.6}"
        },
        "required": {
          "text": "{sys.palette.error}"
        },
        "disabled": {
          "textOpacity": "{sys.opacity.surface.disabled}"
        },
        "hover": {
          "borderOpacity": "{sys.opacity.surface.disabled}",
          "gradientOpacity": "{sys.opacity.hover}"
        },
        "focus": {
          "borderWidth": "{ref.spacing.px} * 2",
          "gradientOpacity": "{sys.opacity.focus}",
          "label": {
            "text": "{??sys.palette}",
            "textOpacity": "{sys.opacity.surface.high}"
          }
        },
        "validation": {
          "palette": "{sys.palette.error}"
        }
      },
      "@font": "{font.subtitle1}",
      "@@palette": "{?palette}",
      "border-radius": "{sys.rounded.standard}",
      "height": {
        "xm": "{ref.spacing.10}",
        "sm": "{ref.spacing.12}",
        "md": "{ref.spacing.14}",
        "lg": "{ref.spacing.16}",
        "xl": "{ref.spacing.20}",
        "2xl": {
          "@font": "{font.interactiveDisplay}",
          "var|sys": {
            "height": "{ref.spacing.27}",
            "padding": "0px !important",
            "label": {
              "height": "{ref.lineHeight.interactiveDisplay}"
            }
          },
          "& .??__input": {
            "padding-y": "0px",
            "text-align": "center"
          },
          "& .??__text": {
            "display": "none"
          }
        }
      },
      "section|appearance": {
        "filled": {
          "@style": "{??m.appearance.filled}"
        },
        "outlined": {
          "@style": "{??m.appearance.outlined}"
        },
        "standard": {
          "@style": "{??m.appearance.standard}"
        },
        "classic": {
          "@label": "{??m.labelTop}",
          "@style": "{??m.appearance.standard}",
          "@classic": "{??m.appearance.classic}",
          "?field-message-padding": "0px",
          "& .??__label-top": {
            "@font": "{font.subtitle2}"
          }
        },
        "tonal": {
          "@style": "{??m.appearance.tonal}"
        },
        "default": "filled"
      },
      "section|rounded": {
        "@style": "{?rounded}",
        "full": {
          "border-radius": "{??sys.height} / 2",
          "var|sys": {
            "padding": "{??sys.height} / 2"
          }
        }
      }
    }
  }
}
