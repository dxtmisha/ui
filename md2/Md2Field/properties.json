{
  "md2": {
    "field": {
      "@style": "{d.field}",
      "mixin|m": {
        "mixin|appearance": {
          "mixin|filled": {
            "var|sys": {
              "background": "{sys.palette.overlay}",
              "backgroundOpacity": "{sys.opacity.overlay}"
            }
          }
        }
      },
      "var|sys": {
        "background": "{sys.palette.overlay}",
        "backgroundOpacity": "0",
        "height": "{ref.spacing.14}",
        "padding": "{ref.spacing.3}",
        "space": "{ref.spacing.1}",
        "width": "{ref.spacing.72}",
        "border": {
          "color": "{sys.palette.onSurface}",
          "opacity": "{sys.opacity.border}",
          "width": "{ref.spacing.px}",
          "focusWidth": "{ref.spacing.px} * 2"
        },
        "disabled": {
          "textOpacity": "{sys.opacity.surface.disabled}"
        },
        "label": {
          "height": "{ref.spacing.6}",
          "textOpacity": "{sys.opacity.surface.medium}"
        },
        "required": {
          "text": "{sys.palette.error}"
        },
        "text": {
          "height": "{ref.spacing.6}"
        }
      },
      "@font": "{font.subtitle1}",
      "border-radius": "{sys.rounded.standard}",
      "height": {
        "xm": "{ref.spacing.10}",
        "sm": "{ref.spacing.12}",
        "md": "{ref.spacing.14}",
        "lg": "{ref.spacing.16}",
        "xl": "{ref.spacing.20}"
      },
      "section|appearance": {
        "filled": {
          "@style": "{??m.appearance.filled}"
        },
        "default": "filled"
      },
      "section|rounded": {
        "@style": "{?rounded}"
      }
    }
  }
}
