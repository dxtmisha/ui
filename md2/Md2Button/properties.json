{
  "md2": {
    "button": {
      "@style": "{d.button}",
      "var|_palette": "=var(--sys-palette, {sys.palette.primary})",
      "var|_paletteVariant": "{sys.palette.primaryVariant}",
      "var|_backgroundHoverOpacity": "{sys.opacity.hover}",
      "var|_backgroundActiveOpacity": "{sys.opacity.dragged}",
      "var|_backgroundFocusOpacity": "{sys.opacity.focus}",
      "var|_borderWidth": "{ref.spacing.px}",
      "var|_minWidth": "{ref.spacing.20}",
      "var|_padding": "{ref.spacing.4}",
      "@@palette": "{?palette}",
      "@@rounded": "{?rounded}",
      "appearance": {
        "text": {
          "var|_text": "{??_palette}",
          "var|_textOpacity": "{sys.opacity.surface.high}",
          ":active": {
            "var|_borderOpacity": "{sys.opacity.surface.medium}"
          }
        }
      },
      "height": {
        "sm": "{ref.spacing.8}",
        "md": "{ref.spacing.9}",
        "lg": "{ref.spacing.11}"
      },
      "#text": {
        "@font": "{?.font.button}"
      }
    }
  }
}
