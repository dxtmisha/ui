{
  "d": {
    "image": {
      "var|_fontSize": "inherit",
      "var|_opacity": "0.38",
      "&flex": "{d.flex.center}",
      "background-size": "cover",
      "background-repeat": "no-repeat",
      "border-radius": "inherit",
      "font-size": "{%.image._fontSize}",
      "direction": "ltr",
      "inset": "0",
      "position": "absolute",
      "transform": "none",
      "transition-property": "background-color, background-size, color, filter, opacity, transform",
      "transition-duration": "{d.sys.transitionDuration.fade.enter}",
      "=isType": {
        "public": {
          "&style": "{d.sys.backgroundAsColor}"
        }
      },
      "hide": {
        "&style": "{d.animation.hide}"
      },
      "section|disabled": {
        "colorOpacity": "{%.image._opacity}",
        "=isType": {
          "section|color": {
            "filter": "grayscale(1)",
            "opacity": "{%.image._opacity}"
          },
          "image": {
            "filter": "grayscale(1)",
            "opacity": "{%.image._opacity}"
          }
        }
      }
    }
  }
}
